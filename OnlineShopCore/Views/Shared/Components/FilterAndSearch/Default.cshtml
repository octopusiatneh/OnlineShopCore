@model ShoppingViewModel
@inject IViewLocalizer Localizer
<div class="flex-w flex-c-m m-tb-10">
    <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
        <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
        <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
        @Localizer["Filter"]
    </div>

    <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
        <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
        <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
         @Localizer["Search"]
    </div>
</div>

<!-- Search product -->
<div class="dis-none panel-search w-full p-t-10 p-b-15">
    <form method="get" action="search.html">
        <div class="bor8 dis-flex p-l-15">
            <button id="btnSearch" type="submit" class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                <i class="zmdi zmdi-search"></i>
            </button>

            <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" id="search-product" name="keyword" placeholder="@Localizer["SearchFor"]">
        </div>
    </form>
</div>

<!-- Filter -->
<div class="dis-none panel-filter w-100 p-t-10">
    <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
        <div class="filter-col1 p-r-15 p-b-27">
            <div class="mtext-102 cl2 p-b-15">
                 @Localizer["SortBy"]
            </div>

            <ul>
                <li class="p-b-6">
                    <a href="products.html" class="filter-link stext-106 trans-04">
                         @Localizer["Default"]
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=discount" class="filter-link stext-106 trans-04">
                        @Localizer["DiscountProduct"]
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="?filter.html?filter=lastest" class="filter-link stext-106 trans-04 filter-link-active">
                         @Localizer["Newnest"]
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=low-to-high" class="filter-link stext-106 trans-04">
                       @Localizer["LowToHigh"]
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=high-to-low" class="filter-link stext-106 trans-04">
                        @Localizer["HighToLow"]
                    </a>
                </li>
            </ul>
        </div>

        <div class="filter-col2 p-r-15 p-b-27">
            <div class="mtext-102 cl2 p-b-15">
                @Localizer["Price"]
            </div>

            <ul>
                <li class="p-b-6">
                    <a href="products.html" class="filter-link stext-106 trans-04 filter-link-active">
                        @Localizer["Default"]
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=price-0-50" class="filter-link stext-106 trans-04">
                        $0.00 - $50.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=price-50-100" class="filter-link stext-106 trans-04">
                        $50.00 - $100.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=price-100-150" class="filter-link stext-106 trans-04">
                        $100.00 - $150.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=price-150-200" class="filter-link stext-106 trans-04">
                        $150.00 - $200.00
                    </a>
                </li>

                <li class="p-b-6">
                    <a href="filter.html?filter=price-200" class="filter-link stext-106 trans-04">
                        $200.00+
                    </a>
                </li>
            </ul>
        </div>

    </div>
</div>