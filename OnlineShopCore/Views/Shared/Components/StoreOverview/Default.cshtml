@model HomeViewModel

@inject IViewLocalizer Localizer
<!-- Product -->
<section class="sec-product bg0 p-t-100 p-b-50">
    <div class="container">
        <div class="p-b-32">
            <h3 class="ltext-105 cl5 txt-center respon1">
                @Localizer["StoreOverview"]
            </h3>
        </div>

        <!-- Tab01 -->
        <div class="tab01">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item p-b-10">
                    <a class="nav-link active" data-toggle="tab" href="#best-seller" role="tab">@Localizer["Hot"]</a>
                </li>

                <li class="nav-item p-b-10">
                    <a class="nav-link" data-toggle="tab" href="#featured" role="tab">@Localizer["New"]</a>
                </li>

                <li class="nav-item p-b-10">
                    <a class="nav-link" data-toggle="tab" href="#sale" role="tab">@Localizer["Toprate"]</a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content p-t-50">
                <!-- Hot -->
                <div class="tab-pane fade show active" id="best-seller" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in Model.HotProducts)
                            {
                                var url = product.SeoAlias + "-st-" + product.Id;
                                url = url.ToLower();
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <a href="@url">
                                                <img src="@product.Image" alt="IMG-PRODUCT">
                                            </a>
                                        </div>



                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@url" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                    @product.Name
                                                </a>

                                                <span class="stext-105 cl3">
                                                    @if (product.PromotionPrice.HasValue)
                                                    {
                                                        <strike>@Html.Raw("&#36;")@product.Price</strike> @Html.Raw("&#36;")@product.PromotionPrice
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("&#36;") @product.Price
                                                    }
                                                </span>
                                            </div>

                                           
                                        </div>







                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>

                <!--New-->
                <div class="tab-pane fade" id="featured" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in Model.LastestProducts)
                            {
                                var url = product.SeoAlias + "-st-" + product.Id;
                                url = url.ToLower();
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <a href="@url">
                                                <img src="@product.Image" alt="IMG-PRODUCT">
                                            </a>
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@url" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                    @product.Name
                                                </a>

                                                <span class="stext-105 cl3">
                                                    @if (product.PromotionPrice.HasValue)
                                                    {
                                                        <strike>@Html.Raw("&#36;")@product.Price</strike> @Html.Raw("&#36;")@product.PromotionPrice
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("&#36;") @product.Price
                                                    }
                                                </span>
                                            </div>

                                         
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>

                <!--Top rate -->
                <div class="tab-pane fade" id="sale" role="tabpanel">
                    <!-- Slide2 -->
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @foreach (var product in Model.TopSellProducts)
                            {
                                var url = product.SeoAlias + "-st-" + product.Id;
                                url = url.ToLower();
                                <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                                    <!-- Block2 -->
                                    <div class="block2">
                                        <div class="block2-pic hov-img0">
                                            <a href="@url">
                                                <img src="@product.Image" alt="IMG-PRODUCT">
                                            </a>     
                                        </div>

                                        <div class="block2-txt flex-w flex-t p-t-14">
                                            <div class="block2-txt-child1 flex-col-l ">
                                                <a href="@url" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                                    @product.Name
                                                </a>

                                                <span class="stext-105 cl3">
                                                    @if (product.PromotionPrice.HasValue)
                                                    {
                                                        <strike>@Html.Raw("&#36;")@product.Price</strike> @Html.Raw("&#36;")@product.PromotionPrice
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw("&#36;") @product.Price
                                                    }
                                                </span>
                                            </div>

                                        
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</section>