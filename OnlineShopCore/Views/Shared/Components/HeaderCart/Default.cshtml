@model List<ShoppingCartViewModel>
<div class="header-cart flex-col-l p-l-65 p-r-25" id="headerCart">
    <div class="header-cart-title flex-w flex-sb-m p-b-8">
        <span class="mtext-103 cl2">    
            Your Cart
        </span>
        <!--close button not working as expect-->
        @*<div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
            <i class="zmdi zmdi-close"></i>
        </div>*@
    </div>
    <div class="header-cart-content flex-w js-pscroll">
        <ul class="header-cart-wrapitem w-full">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    var url = item.Product.SeoAlias + "-p-" + item.Product.Id + ".html";

                    <li class="header-cart-item flex-w flex-t m-b-12">
                        <div class="header-cart-item-img">
                            <img src="@item.Product.Image" alt="@item.Product.Name">
                        </div>

                        <div class="header-cart-item-txt p-t-8">
                            <a href="@url" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                @item.Product.Name
                            </a>

                            <span class="header-cart-item-info">
                                @item.Quantity x $@((item.Product.PromotionPrice ?? item.Product.Price))
                            </span>
                        </div>
                    </li>
                }
            }
            else
            {
                <li class="stext-101">Your cart is empty</li>
            }
        </ul>
        <div class="w-full">
            <div class="header-cart-total w-full p-tb-40">
                Total: $ @Model.Sum(x => x.Quantity * x.Price)
            </div>

            <div class="header-cart-buttons flex-w w-full">
                <a href="shopping-cart.html" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                    Proceed to check out
                </a>
            </div>
        </div>
    </div>
</div>
