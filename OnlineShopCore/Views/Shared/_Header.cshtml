<header class="header-v4">
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>

                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        Help & FAQs
                    </a>

                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        EN
                    </a>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="/login.html" class="flex-c-m trans-04 p-lr-25">
                            Sign in
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop how-shadow1">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a asp-controller="Home" asp-action="Index" class="logo">
                    <img src="/client-side/images/icons/logo-01.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="label1" data-label1="new">
                            <a href="products.html">Shop</a>
                        </li>

                        <li>
                            <a href="shopping-cart.html">Cart</a>
                        </li>

                        <li>
                            <a href="contact.html">Contact</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a>My Account <i class="fa fa-user"></i></a>
                                <ul class="sub-menu">
                                    <li><a href="/account.html">Edit your profile</a></li>
                                    <li><a href="/orders-list.html">Order Tracking</a></li>
                                    <li>
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                            <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Sign out</span></a>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }

                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    @*<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                        <i class="zmdi zmdi-search"></i>
                    </div>*@

                    <!--Cart button-->
                    <div id="cartButton" class="js-show-cart">
                        @await Component.InvokeAsync("Header")
                    </div>

                </div>
            </nav>
        </div>
    </div>
    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a asp-controller="Home" asp-action="Index"><img src="/client-side/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            @*<div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
                <i class="zmdi zmdi-search"></i>
            </div>*@

            <!--Cart button-->
            <div id="cartButtonMobile" class="js-show-cart">
                @await Component.InvokeAsync("HeaderMobile")
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>
            </li>

            <li>
                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        Help & FAQs
                    </a>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        EN
                    </a>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="/login.html" class="flex-c-m trans-04 p-lr-25">
                            Sign in
                        </a>
                    }


                </div>
            </li>
        </ul>

        <ul class="main-menu-m">
            <li>
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>

            <li>
                <a href="products.html" class="label1 rs1" data-label1="hot">Shop</a>
            </li>

            <li>
                <a href="shopping-cart.html">Cart</a>
            </li>

            <li>
                <a href="contact.html">Contact</a>
            </li>

            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a>My Account <i class="fa fa-user"></i></a>
                    <ul class="sub-menu-m">
                        <li><a href="/account.html">Edit your profile</a></li>
                        <li><a href="/orders-list.html">Order Tracking</a></li>
                        <li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Sign out</span></a>
                            </form>
                        </li>
                    </ul>
                    <span class="arrow-main-menu-m">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                    </span>
                </li>
            }
        </ul>
    </div>

    <!-- Modal Search -->
    @*<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
            <div class="container-search-header">
                <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                    <img src="/client-side/images/icons/icon-close2.png" alt="CLOSE">
                </button>

                <form class="wrap-search-header flex-w p-l-15">
                    <button class="flex-c-m trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                    <input class="plh3" type="text" name="search" placeholder="Search...">
                </form>
            </div>
        </div>*@

    <!-- Cart -->
    <div class="wrap-header-cart js-panel-cart">
        <div class="s-full js-hide-cart"></div>
        @await Component.InvokeAsync("HeaderCart")
    </div>
</header>