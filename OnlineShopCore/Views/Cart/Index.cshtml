@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    <script src="~/app-client/controllers/cart/index.js" asp-append-version="true"></script>
    <script>
        var cartObj = new CartController();
        cartObj.initialize();
    </script>
}
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            @Localizer["Home"]
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @Localizer["ShopingCart"]
        </span>
    </div>
</div>

<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div id="cuocDoiNayKhoQuaMa" class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-10 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <thead>
                                <tr class="table_head">
                                    <th class="column-1">@Localizer["Product"]</th>
                                    <th class="column-2"></th>
                                    <th class="column-3 txt-center">@Localizer["Price"]</th>
                                    <th class="column-4"><p class="txt-center">@Localizer["Quantity"]</p></th>
                                    <th class="column-4 "><p class="txt-center">@Localizer["Total"]</p></th>
                                    <td style="width:30px"></td>
                                </tr>
                            </thead>

                            <tbody id="table-cart-content"></tbody>
                        </table>
                        <script id="template-cart" type="x-tmpl-mustache">
                            <tr class="table_row" data-id="{{ProductId}}">
                                <td class="column-1">
                                    <div class="itemcart1">
                                        <img src="{{Image}}" style="width:60px;height:80px" alt="{{ProductName}}" />
                                    </div>
                                </td>
                                <td class="column-2"><a href="{{Url}}" class="header-cart-item-name hov-cl1 trans-04">{{ProductName}}</a></td>
                                <td class="column-3 txt-center">{{Price}} ₫</td>
                                <td class="column-4">
                                    <div class="wrap-num-product flex-w m-l-auto m-r-0">

                                        <div data-id="{{ProductId}}" class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-minus"></i>
                                        </div>

                                        <input data-id="{{ProductId}}" class="mtext-104 cl3 txt-center num-product" type="number" oninput="validity.valid||(value='');" onpress="isNumber(event)" name="txtQuantity" value="{{Quantity}}">

                                        <div data-id="{{ProductId}}" class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                            <i class="fs-16 zmdi zmdi-plus"></i>
                                        </div>

                                        <input id="hidden-price-{{ProductId}}" data-price="{{PriceR}}" hidden />

                                    </div>

                                </td>
                                <td class="column-4"><p id="amount-{{ProductId}}" class="txt-center">{{Amount}} ₫</p></td>
                                <td style="width:30px">
                                    <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5 m-r-50">
                                        <a data-id="{{ProductId}}" class="btn-delete">
                                            @Localizer["Delete"]
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </script>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <div class="flex-w flex-m m-r-20 m-tb-5">
                            <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                <a id="btnClearAll">
                                    @Localizer["ClearCart"]
                                </a>
                            </div>
                        </div>

                        <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                            <a id="btnContinueShopping" href="/products">
                                @Localizer["ContinueShopping"]
                            </a>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <a id="btnCheckout" href="javascript:(0)" onClick="location.href='/checkout'" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                @Localizer["ProceedToCheckout"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>