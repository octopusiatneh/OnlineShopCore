@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/tree.css" rel="stylesheet" />
    <link href="~/admin-side/assets/extra-libs/DataTables/DataTables-1.10.16/css/dataTables.bootstrap4.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js"></script>
    <script src="~/app/controllers/product/quantity-management.js"></script>
    <script src="~/app/controllers/product/image-management.js"></script>
    <script src="~/app/controllers/product/whole-price-management.js"></script>
    <script src="~/app/controllers/product/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script src="~/admin-side/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script src="~/lib/datetime-moment/dist/datetime-moment.js"></script>
    <script>
        var date = new Date().toJSON();
        document.getElementById("hidDateCreated").value = date;
    </script>
    <script>
        var product = new productController();
        product.initialize();
    </script>

}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <div class="ml-auto text-left">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Products</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="=container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <button  class="btn btn-success"  id="btnCreate" type="button" data-toggle="tooltip" data-placement="bottom" title="Tạo mới" style="margin-bottom:15px">Tạo mới</button>
                <a class="btn btn-danger" href="~/templates/ProductImportTemplate.xlsx" data-toggle="tooltip" data-placement="bottom" title="Tải template excel nhập SP" style="margin-bottom:15px">Tải template nhập SP</a>
                <button class="btn btn-primary" id="btn-import" type="button" data-toggle="tooltip" data-placement="bottom" title="Nhập SP qua template" style="margin-bottom:15px">Nhập SP</button>
                <button class="btn btn-default" id="btn-export" type="button" data-toggle="tooltip" data-placement="bottom" title="Xuất SP ra excel" style="margin-bottom:15px">Xuất SP</button>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Giá bán</th>
                                <th>Thumbnail</th>
                                <th>Ngày tạo</th>
                                <th>Status</th>
                            </tr>
                        </thead>

                        <tbody></tbody>

                        <tfoot>
                            <tr>
                                <th>Action</th>
                                <th>Tên sản phẩm</th>
                                <th>Danh mục</th>
                                <th>Giá bán</th>
                                <th>Thumbnail</th>
                                <th>Ngày tạo</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

