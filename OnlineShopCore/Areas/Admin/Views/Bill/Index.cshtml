@{
    ViewData["Title"] = "Index";
}
@section Scripts{
    <script src="~/admin-side/assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="~/app/controllers/bill/index.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>
    <script src="~/admin-side/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script src="~/lib/datetime-moment/dist/datetime-moment.js"></script>
    <script>
        var date = new Date().toJSON();
        document.getElementById("hidDateCreated").value = date;
    </script>
    <script>
        var billObj = new BillController();
        billObj.initialize();
    </script>
}
@section Styles{
    <link href="~/admin-side/assets/extra-libs/DataTables/DataTables-1.10.16/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/admin-side/assets/libs/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
}
<input type="hidden" id="hid-category-id" value="0" />
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <div class="ml-auto text-left">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">quản lý hóa đơn</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <table border="0" cellspacing="5" cellpadding="5">
                    <tbody>
                        <tr>
                            <td>Từ ngày:</td>
                            <td><input name="FromDate" id="fromDate" type="text" data-date-format='dd/mm/yyyy'></td>
                            <td> <button id="reset-date" onclick="document.getElementById('fromDate').value = ''">Xóa</button></td>
                        </tr>

                        <tr>
                            <td>Đến ngày:</td>
                            <td><input name="ToDate" id="toDate" type="text"></td>
                            <td> <button id="reset-date2" onclick="document.getElementById('toDate').value = ''">Xóa</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-body">
                <button class="btn btn-success" id="btn-create" type="button" data-toggle="tooltip" data-placement="bottom" title="Create new bill" style="margin-bottom:15px">Tạo mới</button>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th class="not-searchable">Tên khách hàng</th>
                                <th class="not-searchable">Phương thức thanh toán</th>
                                <th class="not-searchable">Ngày đặt</th>
                                <th class="not-searchable">Trạng thái</th>
                                <th>Id</th>
                            </tr>
                        </thead>

                        <tbody></tbody>

                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th class="not-searchable">Tên khách hàng</th>
                                <th class="not-searchable">Phương thức thanh toán</th>
                                <th class="not-searchable">Ngày đặt</th>
                                <th class="not-searchable">Trạng thái</th>
                                <th>Id</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_DetailModal.cshtml" />