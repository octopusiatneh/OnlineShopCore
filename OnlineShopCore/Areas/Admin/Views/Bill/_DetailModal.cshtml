<div id="modal-detail" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="card">
                <form class="form-horizontal" role="form" id="frmMaintainance">
                    <div class="card-body">
                        <div class="form-group row">
                            <input type="hidden" id="hidId" value="0" />
                            <input type="hidden" id="hidDateCreated" value="date" />
                            <label for="txtCustomerName" class="col-6 control-label col-form-label">Họ tên khách hàng</label>
                            <div class="col-12">
                                <input type="text" name="txtCustomerName" class="form-control" id="txtCustomerName" placeholder="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtCustomerAddress" class="col-6 control-label col-form-label">Địa chỉ giao hàng</label>
                            <div class="col-12">
                                <input id="txtCustomerAddress" type="text" class="form-control" name="txtCustomerAddress" value="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtCustomerMobile" class="col-6 control-label col-form-label">Số điện thoại</label>
                            <div class="col-12">
                                <input type="text" name="txtCustomerMobile" class="form-control" id="txtCustomerMobile" placeholder="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtCustomerMessage" class="col-6 control-label col-form-label">Thông tin thêm</label>
                            <div class="col-12">
                                <input type="text" name="txtCustomerMessage" class="form-control" id="txtCustomerMessage" placeholder="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-6 control-label col-form-label">Phương thức thanh toán</label>
                            <div class="col-12">
                                <select id="ddlPaymentMethod" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label f class="col-6 control-label col-form-label">Trạng thái đơn hàng</label>
                            <div class="col-12">

                                <select id="ddlBillStatus" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-2 control-label col-form-label">Chi tiết</label>
                            <div>
                                <table class="table table-bordered col-11">
                                    <thead>
                                        <tr>
                                            <th>Tên sản phẩm</th>                                    
                                            <th>Số lượng</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbl-bill-details"></tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="5">
                                                <button class="btn btn-xs btn-success" id="btnAddDetail" type="button">Add</button>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                                <script type="x-tmpl-mustache" id="template-table-bill-details">
                                    <tr data-id="{{Id}}">
                                        <td>{{{Products}}}</td>   
                                        <td><input type="number" class="txtQuantity form-control" value="{{Quantity}}" /></td>
                                        <td><button class="btn btn-xs btn-danger btn-delete-detail" type="button"><i class="fa fa-trash"></i></button></td>
                                    </tr>
                                </script>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSave" class="btn btn-success">Save</button>
                                <button type="button" data-dismiss="modal" class="btn btn-danger">Close</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>